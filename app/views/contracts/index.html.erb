<p id="notice"><%= notice %></p>
<div class="row">
  <h1>Contracts Listing</h1>
  <Div class="pull-right range-query"></Div>
      <%= form_tag contracts_path, method: :get do %>
        <%= text_field_tag 'search[date_from]', @search.date_from %>
        <%= text_field_tag 'search[date_to]', @search.date_to %>
      <%= submit_tag 'Search', class: 'btn search-button' %>
    <% end %>
</div>

<div class="media">
  <div class="media-body">
    
    
  
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Ref</th>
      <th>Region</th>
      <th>Uploadedby</th>
      <th>Savings</th>
      <th>Dept</th>
      <th>Supplier</th>
      <th>Validfrom</th>
      <th>Validto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contracts.each do |contract| %>
      <tr>
        <td><%= contract.title %></td>
        <td><%= contract.ref %></td>
        <td><%= contract.region %></td>
        <td><%= contract.uploadedBy %></td>
        <td><%= contract.savings %></td>
        <td><%= contract.dept %></td>
        <td><%= contract.supplier %></td>
        <td><%= contract.validFrom.strftime("%d-%m-%Y") %></td>
        <td><%= contract.validTo.strftime("%d-%m-%Y") %></td>
        <td><%= link_to 'Show', contract, class: 'btn btn-mini btn-info' %></td>
        <td><%= link_to 'Edit', edit_contract_path(contract), class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', contract, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
  
</div>
<%= link_to 'New Contract', new_contract_path %>
